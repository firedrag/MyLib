<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/banner_container"
    android:layout_width="match_parent"
    android:layout_height="100dp">

    <app.lib.commonui.banner.BannerViewPager
        android:id="@+id/banner_pager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"></app.lib.commonui.banner.BannerViewPager>

    <app.lib.commonui.banner.BannerPagerIndicator
        android:id="@+id/banner_indicator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|right"></app.lib.commonui.banner.BannerPagerIndicator>

</FrameLayout>