<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.chenhao.sample.MainActivity">


    <app.lib.commonui.nestedscroll.ParentScrollView
        android:id="@+id/parent_scrollview"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_1"
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:background="@color/class_L"
                android:gravity="center"
                android:textColor="@color/white" />

            <app.lib.commonui.nestedscroll.ChildWebView
                android:id="@+id/child_webview"
                android:layout_width="match_parent"
                android:layout_height="400dp"></app.lib.commonui.nestedscroll.ChildWebView>

            <TextView
                android:id="@+id/tv_2"
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:background="@color/class_K"
                android:gravity="center"
                android:textColor="@color/white" />

        </LinearLayout>


    </app.lib.commonui.nestedscroll.ParentScrollView>

</RelativeLayout>
